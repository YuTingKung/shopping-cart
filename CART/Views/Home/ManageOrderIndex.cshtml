@model IEnumerable<CART.Models.Order>

@{
    ViewBag.Title = "ManageOrderIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>訂單列表</h2>

@using (Html.BeginForm("ManageOrderIndex", "Home"))
{
    @Html.TextBox("userName", null, new { @class = "btn-info" })
    <input type="submit" value="搜尋" class="btn btn-default"/>
}

<table class="table">
    <tr>
        <th>
            購買會員
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecieverName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecieverPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecieverAddress)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.GetUserName()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecieverName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecieverPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecieverAddress)
        </td>
        <td>
            @Html.ActionLink("商品明細", "ManageOrderDetails", new { id=item.Id }, new { @class="btn btn-default" })
        </td>
    </tr>
}

</table>
