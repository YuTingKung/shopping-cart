@{ 
    var currentCart = CART.Models.Operations.GetCurrentCart();
}

<a id="CartDropDown" class="dropdown-toggle" data-toggle="dropdown">
    @String.Format("共{0}元 ({1})", currentCart.TotalAmount, currentCart.Count )
    <span class="caret"></span>
</a>

<ul class="dropdown-menu" role="menu" aria-labelledby="CartDropDown">
    @foreach (var cartitem in currentCart.cartItems)
    {
        <li>
            <a>
                @cartitem.Name
            <span>@cartitem.Price 元 x @cartitem.Quantity </span>
            <span class="btn btn-danger" onclick="RemoveFromCart('@cartitem.Id')">
                x
            </span>
        </a>
    </li>
}
    <li class="divider"></li>
    <li>
        <div id="CartButtons">
            <a class="btn btn-default text-center" href="@Url.Action("OrderIndex", "Home", new { })">結帳去</a>
            <a class="btn btn-default text-center" onclick="ClearCart()">清空</a>
        </div>
    </li>
</ul>
